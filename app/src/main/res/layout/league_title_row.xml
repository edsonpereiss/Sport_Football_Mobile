<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leagueLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical"
        android:paddingTop="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/leagueFlag"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/goals" />

            <TextView
                android:id="@+id/competitionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/chevron_down"
                android:layout_toLeftOf="@+id/chevron_down"
                android:layout_toEndOf="@+id/leagueFlag"
                android:layout_toRightOf="@+id/leagueFlag"
                android:maxLines="1"
                android:paddingStart="@dimen/student_list_padding"
                android:paddingLeft="@dimen/student_list_padding"
                android:paddingEnd="@dimen/student_list_padding"
                android:paddingRight="@dimen/student_list_padding"
                android:textColor="#5A5A63"
                android:textSize="16sp"
                app:fontFamily="Roboto"
                tools:text="Random Name" />

            <ImageView
                android:id="@+id/chevron_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/student_list_padding"
                android:paddingLeft="@dimen/student_list_padding"
                android:paddingEnd="@dimen/student_list_padding"
                android:paddingRight="@dimen/student_list_padding"
                android:src="@drawable/ic_chevron_right_grey600_24dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#F6F6F7" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
