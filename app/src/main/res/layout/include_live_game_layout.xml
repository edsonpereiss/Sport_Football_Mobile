<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liveLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_weight="1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teamAScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:text="1"
            android:textColor="@color/ft_score_text_color"
            android:textSize="@dimen/ft_score_text_size"
            android:textStyle="bold"
            app:fontFamily="Roboto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:text=":"
            android:textColor="@color/ft_score_text_color"
            android:textSize="@dimen/ft_score_text_size"
            android:textStyle="bold"
            app:fontFamily="Roboto" />

        <TextView
            android:id="@+id/teamBScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="3"
            android:textColor="@color/ft_score_text_color"
            android:textSize="@dimen/ft_score_text_size"
            android:textStyle="bold"
            app:fontFamily="Roboto" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_ht_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:text="1"
            android:textColor="@color/ht_score_text_color"
            android:textSize="@dimen/ht_score_text_size"
            android:textStyle="bold"
            app:fontFamily="Roboto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:text=":"
            android:textColor="@color/ht_score_text_color"
            android:textSize="@dimen/ht_score_text_size"
            android:textStyle="bold"
            app:fontFamily="Roboto" />

        <TextView
            android:id="@+id/visiting_ht_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="3"
            android:textColor="@color/ht_score_text_color"
            android:textSize="@dimen/ht_score_text_size"
            android:textStyle="bold"
            app:fontFamily="Roboto" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#E9004F">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="4dp">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/live_match_white_dot" />

            <TextView
                android:id="@+id/liveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:fontFamily="Roboto"
                tools:text="45+1" />

            <View
                android:id="@+id/blinking"
                android:layout_width="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="4dp"
                android:background="@drawable/live_match_white_dot" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
